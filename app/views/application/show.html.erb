<p>Full address: <%= @application.full_address %></p>
<p>About applicant: <%= @application.description %></p>

<h4><%= @application.name %></h4>
<h6>Pets on application:</h6>
<% @application.pets.each do |pet| %>
  <%= link_to pet.name, "/pets/#{pet.id}" %><br>
<% end %><br>

<p>Application status:<%=  @application.status %></p><br><br>

<h6>Add a Pet to this Application</h6>
<%= form_with url: "/applications/#{@application.id}/pets", method: :post do %>
  <%= label_tag :search %>
  <%= text_field_tag :search %><br>
  <%= submit_tag "Submit" %>
<% end %>

<% if @pets %>
  <h5>Pet search results:</h5><br>
  <% @pets.each do |pet| %>
  <%= link_to pet.name, "/pets/#{pet.id}" %>
  <%= "from shelter: #{pet.shelter.name}" %>
  <%= link_to "Apply for #{pet.name}", "/applications/#{@application.id}/pets", method: :post %>
  <br><br>
  <% end %>
<% end %>