<h1>New Application Form</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :address %>
  <%= f.text_field :address %><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br>

  <%= f.label :state %>
  <%= f.text_field :state %><br>

  <%= f.label :zip_code %>
  <%= f.number_field :zip_code %><br>

  <%= f.label :why_are_you_a_good_candidate? %>
  <%= f.text_area :description, class: :text_paragraph_box %><br>

  <%= f.label :status %>
  <%= f.number_field :status, value: 0 %>

  <%= f.submit "Submit" %>
<% end %>
